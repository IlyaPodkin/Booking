<UserControl x:Class="Администратирование_предприятия.View.UserControlDays"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Администратирование_предприятия.View"
             mc:Ignorable="d" 
             d:DesignHeight="57" d:DesignWidth="96">
    <Button 
        x:Name="BackGrid" 
        Height="57" 
        Width="96" 
        Margin="1" 
        Background="#FF949494"
        Click ="AddClickTime" BorderBrush="#FF5B5B5B" Cursor="Hand">

        <WrapPanel Width="69" Height="48" Orientation="Horizontal" >
            <TextBlock 
            x:Name="NumberDay"
            Text="00" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="2"
            Width="16" 
            Height="18" 
            FontSize="14" 
            Foreground="#DD1D1C1C"/>
        </WrapPanel>
    </Button>
</UserControl>
